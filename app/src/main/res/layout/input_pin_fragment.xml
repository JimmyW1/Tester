<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="#fff0f0f0" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/input_pin_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.0dip"
            android:textColor="#ff333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_input_pin_pan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.0dip"
            android:textColor="#ff333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/input_tip_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20.0dip"
            android:text="请输入密码"
            android:textColor="#ff333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_password"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_gravity="center"
            android:layout_marginLeft="13.0dip"
            android:layout_marginRight="13.0dip"
            android:layout_marginTop="20.0dip"
            android:background="#ffffffff"
            android:clickable="false"
            android:gravity="center"
            android:textColor="#ff333333"
            android:textSize="26.0sp" />
    </LinearLayout>

    <com.boc.spos.client.pinpad.keyboard_view.N900PinKeyBoard
        android:id="@+id/n990_pin_keyborad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
</LinearLayout>